@model StudentManagement.ViewModel.InstructorViewModel

@{
    ViewData["Title"] = "Edit Instructor";
}

<h1>Edit Instructor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditInstructor" method="post">
            <input type="hidden" asp-for="ID" />

            <div class="form-group">
                <label asp-for="FirstMidName" class="control-label"></label>
                <input asp-for="FirstMidName" class="form-control" />
                <span asp-validation-for="FirstMidName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HireDate" class="control-label"></label>
                <input asp-for="HireDate" class="form-control" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OfficeLocation" class="control-label"></label>
                <select asp-for="OfficeLocation" class="form-control" asp-items="ViewBag.Location">
                    <option value="">-- Select Office Location --</option>
                </select>
                <span asp-validation-for="OfficeLocation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Courses Taught</label>
                <div>
                    @foreach (var course in Model.Courses)
                    {
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="SelectedCourses" value="@course.CourseID" @(Model.SelectedCourses.Contains(course.CourseID) ? "checked" : "") />
                                @course.Title
                            </label>
                        </div>
                    }
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="InstructorsList">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
